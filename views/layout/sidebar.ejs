<div class="sidebar">
  <div class="box auth">
    <% if(!user.id && !user.login) { %>

      <form method="post" class="login">
        <h2>Вхід</h2>
        <div class="form-group">
          <label for="login-login">Ім'я</label>
          <input type="text" id="login-login" name="login" />
        </div>
        <div class="form-group">
          <label for="login-password">Пароль</label>
          <input type="password" id="login-password" name="password" />
        </div>
        <div class="buttons">
          <button class="switch-button secondary-inverse">Реєстрація</button>
          <button class="login-button">Ввійти</button>
        </div>
      </form>

      <form method="post" class="register">
        <h2>Реєстрація</h2>
        <div class="form-group">
          <label for="register-login">Ім'я</label>
          <input type="text" id="register-login" name="login" />
        </div>
        <div class="form-group">
          <label for="register-password">Пароль</label>
          <input type="password" id="register-password" name="password" />
        </div>
        <div class="form-group">
          <label for="register-password-confirm">Повторити пароль</label>
          <input type="password" id="register-password-confirm" name="passwordConfirm" />
        </div>
        <div class="buttons">
          <button class="switch-button secondary-inverse">Вхід</button>
          <button class="register-button">Реєстрація</button>
        </div>
      </form>

      <% } else { %>
        <ul>
          <li>
            <a href="/post/add">Додати пост</a>
          </li>
          <li>
            <a href="/file">Додати докумен</a>
          </li>
          <li>
            <a href="/search">Завантажені документи</a>
          </li>
          <li>
            <a href="/api/auth/logout">Вийти</a>
          </li>
        </ul>

        <% } %>

  </div>
  
</div>